%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", videos_path
  = if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People"
    %form.col-md-5.navbar-form(action="#{search_videos_path}" method="post")
      .form-group
        %input.form-control(type="text" name="query" placeholder="Search for videos here")
        %input{:type=>"hidden", :name=>"authenticity_token", :value=>form_authenticity_token.to_s}
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              %a(href= logout_path) Sign Out
